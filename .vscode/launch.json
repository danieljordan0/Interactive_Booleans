{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/interactive_booleans",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for lldb",
                    "text": "settings set target.process.thread.step-avoid-regexp '(^|\\s)\\w*(__assert_fail|__assert|assert)($|\\s)'",
                    "ignoreFailures": true
                }
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "logging": { "engineLogging": false }
        }
    ]
}
